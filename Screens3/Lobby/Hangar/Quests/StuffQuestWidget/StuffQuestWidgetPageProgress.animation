animation ANIMATE_PROGRESS
{
	if (not hidden)
	{
		ChangeData(needAnimation, false);
		BroadcastEvent("AnimateNumber");
		ChangeData(progressPercent, lastProgressPercent);
		ChangeData(progressPercent, currentProgressPercent, resultAnimationTime);
