action HoverAnim(bool isHovered)
{
	if (not hasLock)
	{
		if (isHovered)
		{
			parallel
			{
				if (not panel.tabsMode)
				{
					ChangeProperty("**/TitleWrapper/Title", "Anchor", "topAnchor", -4, 0.16, EASE_IN_EASE_OUT);
				}
				Event("HOVER_START");
			}
		}
		else 
		{
			parallel
			{
				if (not panel.tabsMode)
				{
					ChangeProperty("**/TitleWrapper/Title", "Anchor", "topAnchor", 0, 0.08, EASE_IN_EASE_OUT);
				}
				Event("HOVER_END");
			}
		}

	}
}