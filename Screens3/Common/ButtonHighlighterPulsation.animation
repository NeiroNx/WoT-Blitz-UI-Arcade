animation Pulsation
{
	Opacity(".", opacity=0.0, time=0.0, interpolation=EASE_OUT);
	Scale(".", time=0.0, x = 1.3, y = 1.3, interpolation=EASE_OUT);
	parallel
	{
		Scale(".", time=0.5, x = 1.0, y = 1.0, interpolation=EASE_OUT);
		
		repeat
		{
			Opacity(".", opacity=1.0, time=0.5, interpolation=EASE_OUT);
			Opacity(".", opacity=0.0, time=0.5, interpolation=EASE_OUT);
		}
		
		{
			WaitEvent("StopButtonPulsation");
			Stop();
		}
	}
}